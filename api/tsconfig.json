{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./api/@types"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "api/@types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
